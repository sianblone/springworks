<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
 <mapper namespace="com.biz.bbs.repository.BBsDao">
 
 	<select id="findByIdRM" resultMap="findByIdRM">
 		SELECT * FROM tbl_bbs WHERE b_id = #{b_id}
 	</select>
 	
 	<select id="findCommentByBId" resultType="commentVO">
 		SELECT * FROM tbl_comment WHERE c_b_id = #{b_id}
 	</select>
 
 	<resultMap type="bbsVO" id="findByIdRM">
 		<id column="b_id" property="b_id"/>
 		<result column="b_p_id" property="b_p_id"/>
 		<result column="b_date_time" property="b_date_time"/>
 		<result column="b_writer" property="b_writer"/>
 		<result column="b_subject" property="b_subject"/>
 		<result column="b_subject" property="b_subject"/>
 		<result column="b_content" property="b_content"/>
 		<result column="b_file" property="b_file"/>
 		<collection column="b_id" select="findCommentByBId" property="cmtList" ofType="commentVO"/>
 	</resultMap>
 
 	
 
 	<insert id="insert" parameterType="bbsVO">
 			INSERT INTO tbl_bbs(
			 	B_ID,
			 	B_P_ID,
				B_DATE_TIME,
				B_WRITER,
				B_SUBJECT,
				B_CONTENT,
				B_FILE
			) VALUES (				
				SEQ_BBS.NEXTVAL,
				#{b_p_id,jdbcType=VARCHAR},
				#{b_date_time,jdbcType=VARCHAR},
				#{b_writer,jdbcType=VARCHAR},
				#{b_subject,jdbcType=VARCHAR},
				#{b_content,jdbcType=VARCHAR},
				#{b_file}
 			)
 	
 	</insert>
 	<update id="update" parameterType="bbsVO">
		 	UPDATE tbl_bbs SET
				B_WRITER = #{b_writer,jdbcType=VARCHAR},
				B_SUBJECT = #{b_subject,jdbcType=VARCHAR},
				B_CONTENT = #{b_content,jdbcType=VARCHAR},
				B_FILE = #{b_file}
			WHERE
		 		B_ID = #{b_id}
 	</update>
 
 </mapper> 